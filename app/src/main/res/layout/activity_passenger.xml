<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.PassengerActivity">

    <include layout="@layout/content_passenger" />

    <LinearLayout
        android:id="@+id/llLocations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etStartLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:drawableStart="@drawable/green_circle"
            android:drawablePadding="6dp"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:enabled="false"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp"
            android:hint="My Local" />

        <EditText
            android:id="@+id/etDestineLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/green_circle"
            android:padding="10dp"
            android:drawableTint="@android:color/darker_gray"
            android:drawablePadding="6dp"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp"
            android:hint="Type your destine" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCallUber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom"
        android:text="Call Uber"
        android:theme="@style/commomButton"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>